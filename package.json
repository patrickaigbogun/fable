    "elysia": "latest",
    "logestic": "^1.2.4",
    "postcss": "^8.5.6",
    "pouchdb": "^9.0.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.9.3"
  },
  "devDependencies": {
    "@types/react-dom": "^19.2.3",
